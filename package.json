{
  "name": "mb-cli",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "prepare": "husky",
    "commitlint": "commitlint --edit"
  },
  "dependencies": {
    "commitizen": "^4.3.1",
    "tsx": "^4.19.2"
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && npx cz --hook || true"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "@types/node": "^22.10.6",
    "cz-git": "^1.11.0",
    "husky": "^9.1.7",
    "lerna": "^8.1.9",
    "typescript": "^5.7.3"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git"
    }
  }
}